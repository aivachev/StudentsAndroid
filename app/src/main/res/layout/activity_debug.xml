<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/get_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Groups to log"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/dummy_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create 100 students"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/get_groups" />

    <Button
        android:id="@+id/dummy_lessons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create 100 lessons"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dummy_users" />
</android.support.constraint.ConstraintLayout>